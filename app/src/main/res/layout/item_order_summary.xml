<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_number_produk_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/white_grey"
        android:paddingStart="7dp"
        android:paddingTop="2dp"
        android:paddingEnd="7dp"
        android:paddingBottom="2dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_produk_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/caramel_macchitato"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_number_produk_summary"
        app:layout_constraintStart_toEndOf="@+id/tv_number_produk_summary"
        app:layout_constraintTop_toTopOf="@+id/tv_number_produk_summary" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_total_summary"
        app:layout_constraintEnd_toStartOf="@+id/tv_total_summary"
        app:layout_constraintTop_toTopOf="@+id/tv_total_summary" />

    <TextView
        android:id="@+id/tv_total_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27.000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_produk_summary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_name_produk_summary" />

    <TextView
        android:id="@+id/tv_type_drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/medium"
        app:layout_constraintStart_toStartOf="@+id/tv_name_produk_summary"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_produk_summary" />

    <TextView
        android:id="@+id/tv_price_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView23"
        app:layout_constraintTop_toTopOf="@+id/tv_type_drink" />

    <TextView
        android:id="@+id/tv_available_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Cold"
        app:layout_constraintStart_toStartOf="@+id/tv_type_drink"
        app:layout_constraintTop_toBottomOf="@+id/tv_type_drink" />

    <TextView
        android:id="@+id/tv_available_price_summary"
        android:layout_width="21dp"
        android:layout_height="15dp"
        android:text="+0"
        app:layout_constraintBottom_toBottomOf="@+id/tv_available_summary"
        app:layout_constraintEnd_toEndOf="@+id/tv_price_type"
        app:layout_constraintTop_toTopOf="@+id/tv_available_summary" />

    <TextView
        android:id="@+id/tv_sugar_level_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=" Less Sugar"
        app:layout_constraintStart_toStartOf="@+id/tv_available_summary"
        app:layout_constraintTop_toBottomOf="@+id/tv_available_summary" />

    <TextView
        android:id="@+id/tv_sugar_level_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+0"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sugar_level_summary"
        app:layout_constraintEnd_toEndOf="@+id/tv_price_type"
        app:layout_constraintStart_toStartOf="@+id/tv_available_price_summary"
        app:layout_constraintTop_toTopOf="@+id/tv_sugar_level_summary" />

    <View
        android:id="@+id/view5"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sugar_level_summary" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="@+id/tv_price_type"
        app:layout_constraintEnd_toStartOf="@+id/tv_price_type"
        app:layout_constraintTop_toTopOf="@+id/tv_price_type" />
</androidx.constraintlayout.widget.ConstraintLayout>